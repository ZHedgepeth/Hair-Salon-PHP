<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <title>Clients</title>
    </head>
    <body>
        <div class="container">
            <h1>Hair Salon</h1>
        </div>
        <div class="row">
            <div class="col-md-5">
                <h3>Create a new client</p>
                <div class="form-group">
                    <form action="/clients" method="post" class="form-inline">
                        <label for="new_client">New Client's Name:</label>
                        <input id="new_client" name="new_client" type="text" class="form-control">
                        <button type="submit" class="btn btn-success">Add New Client</button>
                    </form>
                </div>
            </div>
            <div class="col-md-5">
                <p>All Clients</p>
                {% for client in clients %}
                  <li>{{ client.getName }}</li>
                {% endfor %}

                <form action="/delete_clients" method="post">
                    <button type="submit" class="btn btn-danger">Delete All</button>
                </form>
            </div>
        </div>
        <a href="/" role="button" class="btn btn-info">Main Page</a>

    </body>
</html>
